<Window
    x:Class="LeonoraInventory.Views.ProductoWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:LeonoraInventory.ViewModels"
    Title="Producto" Height="400" Width="600">
    <Window.DataContext>
        <vm:ProductoViewModel/>
    </Window.DataContext>
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Precio Boleta:" />
            <TextBox Text="{Binding PrecioBoleta, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Porcentaje (%):" Margin="0,8,0,0"/>
            <TextBox Text="{Binding Porcentaje, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Text="Precio Costo:" Margin="0,8,0,0"/>
            <TextBlock Text="{Binding PrecioCosto, StringFormat=C}" />

            <TextBlock Text="Precio Público:" Margin="0,8,0,0"/>
            <TextBlock Text="{Binding PrecioPublico, StringFormat=C}" />
        </StackPanel>

        <Button
      Grid.Row="1"
      Content="Guardar"
      Command="{Binding GuardarCommand}"
      HorizontalAlignment="Right"
      Width="100"
      Margin="0,16,0,0"/>
    </Grid>
</Window>
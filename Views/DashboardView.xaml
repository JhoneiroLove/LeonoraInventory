<UserControl x:Class="LeonoraInventory.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
             Background="#F3F6F9"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          Opacity="0.1"
                          BlurRadius="8"
                          ShadowDepth="2"/>
    </UserControl.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0"
                   Text="Tablero"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333333"/>

        <!-- Resumen de estadísticas -->
        <UniformGrid Grid.Row="1"
                     Columns="4"
                     Margin="0,16,0,16">
            <!-- Aquí tu UniformGrid de stats sin cambios -->
            <!-- Total de productos -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="16"
                    Margin="8"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Total de productos"
                                   FontSize="14"
                                   Foreground="#555555"/>
                        <TextBlock Text="{Binding TotalProducts}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#222222"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Width="32"
                            Height="32"
                            Background="#F0F0F0"
                            CornerRadius="4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <TextBlock Text="&#xE8C3;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Otros 3 cuadros (stock bajo, valor inventario, agotados) sin cambios -->

            <!-- Productos con stock bajo -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="16"
                    Margin="8"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Productos con stock bajo"
                                   FontSize="14"
                                   Foreground="#555555"/>
                        <TextBlock Text="{Binding LowStockItems}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#222222"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Width="32"
                            Height="32"
                            Background="#F0F0F0"
                            CornerRadius="4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <TextBlock Text="&#xE7BA;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Valor del inventario -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="16"
                    Margin="8"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Valor del inventario"
                                   FontSize="14"
                                   Foreground="#555555"/>
                        <TextBlock Text="{Binding InventoryValue, StringFormat='S/ {0:F2}'}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#222222"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Width="32"
                            Height="32"
                            Background="#F0F0F0"
                            CornerRadius="4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <TextBlock Text="&#xEAFD;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>

            <!-- Productos agotados -->
            <Border Background="White"
                    CornerRadius="8"
                    Padding="16"
                    Margin="8"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="Productos agotados"
                                   FontSize="14"
                                   Foreground="#555555"/>
                        <TextBlock Text="{Binding OutOfStockItems}"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Foreground="#222222"/>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Width="32"
                            Height="32"
                            Background="#F0F0F0"
                            CornerRadius="4"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                        <TextBlock Text="&#xE8C3;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="16"
                                   Foreground="#999999"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </UniformGrid>

        <!-- Contenido principal -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Gráfico y Quick Stats -->
            <StackPanel Grid.Column="0">
                    <Border Background="White"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,16"
                    Effect="{StaticResource CardShadow}">   
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Movimiento del inventario"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,12"
                       Grid.Row="0"/>

                        <oxy:PlotView Model="{Binding MovementPlotModel}"
                          Grid.Row="1"
                          VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch"
                          Background="Transparent" />
                    </Grid>
                </Border>

                <UniformGrid Columns="4" Margin="0">
                    <Border Background="White"
                        CornerRadius="8"
                        Padding="12"
                        Margin="4"
                        Height="80"
                        Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                            <TextBlock Text="Hoy"
                       FontSize="12"
                       Foreground="#555555"/>
                            <TextBlock Text="{Binding MovimientosHoy, StringFormat=+{0}}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#222222"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White"
            CornerRadius="8"
            Padding="12"
            Margin="4"
            Height="80"
            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                            <TextBlock Text="Esta semana"
                       FontSize="12"
                       Foreground="#555555"/>
                            <TextBlock Text="{Binding MovimientosSemana, StringFormat=+{0}}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#222222"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White"
            CornerRadius="8"
            Padding="12"
            Margin="4"
            Height="80"
            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                            <TextBlock Text="Este mes"
                       FontSize="12"
                       Foreground="#555555"/>
                            <TextBlock Text="{Binding MovimientosMes, StringFormat=+{0}}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#222222"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White"
            CornerRadius="8"
            Padding="12"
            Margin="4"
            Height="80"
            Effect="{StaticResource CardShadow}">
                        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                            <TextBlock Text="Este año"
                       FontSize="12"
                       Foreground="#555555"/>
                            <TextBlock Text="{Binding MovimientosAno, StringFormat=+{0}}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#222222"/>
                        </StackPanel>
                    </Border>
                </UniformGrid>
            </StackPanel>

            <!-- Listado de productos con stock bajo -->
            <Border Grid.Column="1"
                    Background="White"
                    CornerRadius="8"
                    Padding="16"
                    Effect="{StaticResource CardShadow}"
                    Margin="16,0,0,0">
                <StackPanel>
                    <TextBlock Text="Productos con stock bajo"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="#333333"
                               Margin="0,0,0,12"/>
                    <ItemsControl ItemsSource="{Binding LowStockProducts}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="{Binding Nombre}"
                                               FontWeight="Bold"
                                               Foreground="#222222"/>
                                    <TextBlock FontSize="12"
                                               Foreground="#555555">
                                        <Run Text="Stock: "/>
                                        <Run Text="{Binding StockActual, Mode=OneWay}"/>
                                        <Run Text=" / "/>
                                        <Run Text="{Binding StockMinimo, Mode=OneWay}"/>
                                    </TextBlock>
                                    <ProgressBar Value="{Binding StockActual, Mode=OneWay}"
             Maximum="{Binding StockMinimo, Mode=OneWay}"
             Height="6"
             Margin="0,4,0,0"
             Foreground="#FFC107"
             Background="#E0E0E0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <Button Content="Ver todos los productos con stock bajo"
                            Margin="0,8,0,0"
                            Height="32"
                            Background="Transparent"
                            BorderBrush="#DDDDDD"
                            BorderThickness="1"
                            Foreground="#333333"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Actividad reciente -->
        <Border Grid.Row="3"
                Background="White"
                CornerRadius="8"
                Padding="16"
                Effect="{StaticResource CardShadow}">
            <StackPanel>
                <TextBlock Text="Actividad reciente"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           Margin="0,0,0,12"/>
                <ItemsControl ItemsSource="{Binding RecentMovements}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="32"
                                        Height="32"
                                        Background="#FFEBEE"
                                        CornerRadius="4"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="⤵"
                                               FontSize="16"
                                               Foreground="#D32F2F"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                    <TextBlock Text="{Binding Producto}"
                                               FontWeight="Bold"
                                               Foreground="#222222"/>
                                    <TextBlock FontSize="12"
                                               Foreground="#555555">
                                        <Run Text="Eliminado "/>
                                        <Run Text="{Binding Cantidad, Mode=OneWay}"/>
                                        <Run Text=" ítems • "/>
                                        <Run Text="{Binding Fecha, StringFormat='{}{0:dd MMM, HH:mm}'}"/>
                                    </TextBlock>
                                </StackPanel>
                                <Border Grid.Column="2"
                                        Background="#FFEBEE"
                                        CornerRadius="12"
                                        VerticalAlignment="Center"
                                        Padding="8,4">
                                    <TextBlock Text="{Binding Cantidad, Mode=OneWay, StringFormat='-{0}'}"
                                               Foreground="#D32F2F"
                                               FontSize="12"/>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Content="Ver toda la actividad"
                        HorizontalAlignment="Stretch"
                        Height="32"
                        Margin="0,8,0,0"
                        Background="Transparent"
                        BorderBrush="#DDDDDD"
                        BorderThickness="1"
                        Foreground="#333333"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
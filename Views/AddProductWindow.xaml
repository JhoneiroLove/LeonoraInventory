<Window x:Class="LeonoraInventory.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar nuevo producto"
        Height="520" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#EEF2F8"
        FontFamily="Segoe UI">
    <Border Margin="18" CornerRadius="18" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="18" Color="#111" ShadowDepth="2" Opacity="0.10"/>
        </Border.Effect>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="36">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Título -->
                    <RowDefinition Height="Auto"/>
                    <!-- Nombre -->
                    <RowDefinition Height="Auto"/>
                    <!-- Categoría -->
                    <RowDefinition Height="Auto"/>
                    <!-- Cantidad -->
                    <RowDefinition Height="Auto"/>
                    <!-- Stock Mínimo -->
                    <RowDefinition Height="Auto"/>
                    <!-- Precio Boleta -->
                    <RowDefinition Height="Auto"/>
                    <!-- Porcentaje -->
                    <RowDefinition Height="Auto"/>
                    <!-- Precio Costo -->
                    <RowDefinition Height="Auto"/>
                    <!-- Precio Público -->
                    <RowDefinition Height="Auto"/>
                    <!-- Proveedor -->
                    <RowDefinition Height="Auto"/>
                    <!-- Ubicación -->
                    <RowDefinition Height="Auto"/>
                    <!-- Botones -->
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           Text="Registrar nuevo producto"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#222"
                           Margin="0,0,0,30"/>

                <!-- Nombre -->
                <TextBlock Text="Nombre:" Grid.Row="1" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="NameBox"
                         Grid.Row="1" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Categoría -->
                <TextBlock Text="Categoría:" Grid.Row="2" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <ComboBox x:Name="CategoryBox"
                          Grid.Row="2" Grid.Column="1"
                          Margin="0,0,0,16"
                          Padding="8"
                          MinHeight="36"
                          BorderBrush="#D1D5DB"
                          Background="#F9FAFB"
                          FontSize="15"
                          DisplayMemberPath="Nombre"
                          SelectedValuePath="CategoriaId"/>

                <!-- Cantidad -->
                <TextBlock Text="Cantidad:" Grid.Row="3" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="QtyBox"
                         Grid.Row="3" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Stock Mínimo -->
                <TextBlock Text="Stock Mínimo:" Grid.Row="4" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="MinStockBox"
                         Grid.Row="4" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Precio Boleta -->
                <TextBlock Text="Precio Boleta (S/):" Grid.Row="5" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="PriceBox"
                         Grid.Row="5" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"
                         TextChanged="PriceBox_TextChanged"/>

                <!-- Porcentaje -->
                <TextBlock Text="Porcentaje (%):" Grid.Row="6" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="PercentBox"
                         Grid.Row="6" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"
                         TextChanged="PercentBox_TextChanged"/>

                <!-- Precio Costo -->
                <TextBlock Text="Precio Costo (S/):" Grid.Row="7" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="CostoBox"
                         Grid.Row="7" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         IsReadOnly="True"
                         Background="#E2E8F0"
                         BorderBrush="#CBD5E1"
                         FontSize="15"/>

                <!-- Precio Público -->
                <TextBlock Text="Precio Público (S/):" Grid.Row="8" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="PublicoBox"
                         Grid.Row="8" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         IsReadOnly="True"
                         Background="#E2E8F0"
                         BorderBrush="#CBD5E1"
                         FontSize="15"/>

                <!-- Proveedor -->
                <TextBlock Text="Proveedor:" Grid.Row="9" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="SupplierBox"
                         Grid.Row="9" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Ubicación -->
                <TextBlock Text="Ubicación:" Grid.Row="10" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,0"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="LocationBox"
                         Grid.Row="10" Grid.Column="1"
                         Margin="0,0,0,0"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Botones -->
                <StackPanel Grid.Row="11" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,22,0,0"
                            >
                    <Button Content="Cancelar"
                            Click="Cancel_Click"
                            Width="120"
                            Margin="0,0,10,0"
                            Padding="8"
                            Background="#F3F4F6"
                            Foreground="#3B4252"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            FontWeight="SemiBold"/>
                    <Button Content="Guardar"
                            Click="Save_Click"
                            Width="120"
                            Padding="8"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="#2563EB"
                            BorderThickness="1"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>
<UserControl x:Class="LeonoraInventory.Views.MovementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LeonoraInventory.Views"
             xmlns:conv="clr-namespace:LeonoraInventory.Converters"
             Background="#F3F6F9"
             Height="Auto" Width="Auto">

    <UserControl.Resources>
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          Opacity="0.1"
                          BlurRadius="8"
                          ShadowDepth="2"/>
        <Style x:Key="TableHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#E0E7FF"/>
            <Setter Property="Foreground" Value="#1E40AF"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
        </Style>
        <Style x:Key="TableRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#334155"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="0 0 0 1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        <Style x:Key="PositiveTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#16A34A"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="NegativeTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#DC2626"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Margin="24" >

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Movimientos de Inventario"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#111827"
               VerticalAlignment="Center"
               Grid.Column="0"/>

            <Button Content="+ Añadir Movimiento"
                    Command="{Binding AddMovementCommand}"
                    Padding="10,4"
                    Background="#2563EB"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Width="140"
                    Height="32"
                    HorizontalAlignment="Right"
                    Grid.Column="1"/>
        </Grid>

        <!-- Stats Cards -->
        <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,20" HorizontalAlignment="Stretch" >
            <!-- Stock In -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="8" Effect="{StaticResource CardShadow}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <Border Background="#D1FAE5" CornerRadius="6" Width="40" Height="40" VerticalAlignment="Center">
                        <TextBlock Text="⬇" FontSize="24" Foreground="#059669" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="Entradas" FontWeight="SemiBold" Foreground="#065F46"/>
                        <TextBlock Text="{Binding StockInCount, Mode=OneWay}" Style="{StaticResource PositiveTextStyle}" FontSize="20"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Stock Out -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="8" Effect="{StaticResource CardShadow}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#FEE2E2" CornerRadius="6" Width="40" Height="40" VerticalAlignment="Center">
                        <TextBlock Text="⬆" FontSize="24" Foreground="#B91C1C" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="Salidas" FontWeight="SemiBold" Foreground="#991B1B"/>
                        <TextBlock Text="{Binding StockOutCount, Mode=OneWay}" Style="{StaticResource NegativeTextStyle}" FontSize="20"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Period -->
            <Border Background="White" CornerRadius="8" Padding="16" Margin="8" Effect="{StaticResource CardShadow}">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Background="#E0E7FF" CornerRadius="6" Width="40" Height="40" VerticalAlignment="Center">
                        <TextBlock Text="📅" FontSize="24" Foreground="#1E40AF" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="Periodo" FontWeight="SemiBold" Foreground="#1E3A8A"/>
                        <TextBlock Text="{Binding SelectedPeriodText, Mode=OneWay}" FontWeight="Bold" FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </UniformGrid>

        <!-- Search & Filter -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,12" HorizontalAlignment="Right" >
            <Grid Width="280" Height="30" Margin="0,0,8,0" VerticalAlignment="Center">
                <TextBox x:Name="SearchBox"
                         Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                         VerticalContentAlignment="Center"
                         Background="White"
                         Foreground="Black"/>
                <TextBlock Text="Buscar movimientos..."
                           Foreground="Gray"
                           IsHitTestVisible="False"
                           Margin="5,0,0,0"
                           VerticalAlignment="Center"
                           Visibility="{Binding Text, ElementName=SearchBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
            </Grid>
        </StackPanel>

        <!-- DataGrid Movements -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Movements}"
                  IsReadOnly="True"
                  AutoGenerateColumns="False"
                  RowStyle="{StaticResource TableRowStyle}"
                  ColumnHeaderStyle="{StaticResource TableHeaderStyle}"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  Margin="0"
                  Background="White"
                  BorderBrush="#CBD5E1"
                  BorderThickness="1"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Producto"
                        Binding="{Binding ProductName}" Width="*" />
                <DataGridTextColumn Header="Cantidad"
                        Binding="{Binding Quantity}" Width="80" />
                <DataGridTextColumn Header="Fecha"
                        Binding="{Binding Date, StringFormat=d}" Width="140" />
                <DataGridTextColumn Header="Tipo"
                        Binding="{Binding Type}" Width="80" />
                <DataGridTextColumn Header="Usuario"
                        Binding="{Binding User}" Width="120" />
                <DataGridTextColumn Header="Motivo"
                        Binding="{Binding Reason}" Width="200" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
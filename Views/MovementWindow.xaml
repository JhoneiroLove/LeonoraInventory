<Window x:Class="LeonoraInventory.Views.MovementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registrar movimiento"
        Height="520" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#EEF2F8"
        FontFamily="Segoe UI">
    <Border Margin="18" CornerRadius="18" Background="White">
        <Border.Effect>
            <DropShadowEffect BlurRadius="18" Color="#111" ShadowDepth="2" Opacity="0.10"/>
        </Border.Effect>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid Margin="36">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Título -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                           Text="Registrar movimiento"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#222"
                           Margin="0,0,0,30"/>

                <!-- Producto -->
                <TextBlock Text="Producto:" Grid.Row="1" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <ComboBox x:Name="ProductBox"
                          Grid.Row="1" Grid.Column="1"
                          Margin="0,0,0,16"
                          Padding="8"
                          MinHeight="36"
                          BorderBrush="#D1D5DB"
                          Background="#F9FAFB"
                          FontSize="15"/>

                <!-- Fecha -->
                <TextBlock Text="Fecha:" Grid.Row="2" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <DatePicker x:Name="DatePicker"
                            Grid.Row="2" Grid.Column="1"
                            Margin="0,0,0,16"
                            Padding="8"
                            MinHeight="36"
                            BorderBrush="#D1D5DB"
                            Background="#F9FAFB"
                            FontSize="15"/>

                <!-- Cantidad -->
                <TextBlock Text="Cantidad:" Grid.Row="3" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="QtyBox"
                         Grid.Row="3" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Tipo de movimiento -->
                <TextBlock Text="Tipo de movimiento:" Grid.Row="4" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <ComboBox x:Name="TypeBox"
                          Grid.Row="4" Grid.Column="1"
                          Margin="0,0,0,16"
                          Padding="8"
                          MinHeight="36"
                          BorderBrush="#D1D5DB"
                          Background="#F9FAFB"
                          FontSize="15">
                    <ComboBoxItem Content="Entrada" Tag="In"/>
                    <ComboBoxItem Content="Salida" Tag="Out"/>
                </ComboBox>

                <!-- Motivo -->
                <TextBlock Text="Motivo:" Grid.Row="5" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,0,16"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="ReasonBox"
                         Grid.Row="5" Grid.Column="1"
                         Margin="0,0,0,16"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Usuario -->
                <TextBlock Text="Usuario:" Grid.Row="6" Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="#3B4252" FontWeight="SemiBold"/>
                <TextBox x:Name="UserBox"
                         Grid.Row="6" Grid.Column="1"
                         Margin="0,0,0,0"
                         Padding="8"
                         MinHeight="36"
                         BorderBrush="#D1D5DB"
                         Background="#F9FAFB"
                         FontSize="15"/>

                <!-- Botones -->
                <StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,22,0,0">
                    <Button Content="Cancelar"
                            Click="Cancel_Click"
                            Width="120"
                            Margin="0,0,10,0"
                            Padding="8"
                            Background="#F3F4F6"
                            Foreground="#3B4252"
                            BorderBrush="#D1D5DB"
                            BorderThickness="1"
                            FontWeight="SemiBold"/>
                    <Button Content="Guardar"
                            Click="Save_Click"
                            Width="120"
                            Padding="8"
                            Background="#2563EB"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderBrush="#2563EB"
                            BorderThickness="1"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>